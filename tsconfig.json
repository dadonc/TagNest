{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "isolatedModules": true,
    "strict": true
  },
  "include": [
    "svelte/**/*.d.ts",
    "svelte/**/*.ts",
    "svelte/**/*.js",
    "svelte/**/*.svelte"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
